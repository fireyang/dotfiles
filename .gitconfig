[user]
	name = fireyang
	email = shenhuan007@gmail.com
[core]
	excludesfile = /Users/fireyang/.gitignore_global
	quotepath = false
	trustctime = false
	editor = /usr/bin/vim
[alias]
st = status
co = checkout
pom = push origin master
rv = remote -v
	lo = log --graph --pretty=format:\"%Cgreen%h %Creset %cn : %s \"
	ba = branch
	b = branch
	me = merge
	mt = mergetool
	ci = commit
	br = branch
	cm = commit
	ffs = flow feature start
	fff = flow feature finish
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
#[i18n]
#	commitencoding = utf-8
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = current
